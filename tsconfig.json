{
  "angularCompilerOptions": { "strictMetadataEmit": true },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": [
      "node"
    ],
    "strictNullChecks": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@angular/*": [
        "node_modules/@angular/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}